<h1>Tasks</h1>

<% @tasks.each do |task| %>
  <ul>
    <li><%= link_to task.title, task_path(task) %> -
      <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
      <% end %> </li>
  </ul>
<% end %>

<%= link_to "Add a new task", new_task_path %>
